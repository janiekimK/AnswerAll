<h1>Fragen</h1>

<%= form_with url: questions_path, method: :get, local: true do |f| %>
  <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
    <%= f.text_field :q, value: @q, placeholder: "Suche...", style: "flex: 1;" %>
    <%= f.submit "Suchen" %>
  </div>
<% end %>

<% if logged_in? %>
  <div style="margin-bottom: 1rem;">
    <%= link_to "Neue Frage", new_question_path, class: "button" %>
  </div>
<% end %>

<ul>
  <% @questions.each do |q| %>
    <li>
      <%= link_to q.title, question_path(q) %>
      <small>von <%= q.user.name %></small>
    </li>
  <% end %>
</ul>
