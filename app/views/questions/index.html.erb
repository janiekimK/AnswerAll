<h1>Fragen</h1>

<%= form_with url: questions_path, method: :get, local: true do |f| %>
  <%= f.text_field :q, value: @q, placeholder: "Suche..." %>
  <%= f.submit "Suchen" %>
<% end %>

<p><%= link_to "Neue Frage", new_question_path if logged_in? %></p>

<ul>
  <% @questions.each do |q| %>
    <li>
      <%= link_to q.title, question_path(q) %>
      <small>von <%= q.user.name %></small>
    </li>
  <% end %>
</ul>
