<h1>Benutzerverwaltung</h1>

<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>E-Mail</th>
        <th>Rolle</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
          <%= link_to "Bearbeiten", edit_admin_user_path(user), class: "button" %>
          <small style="display: block; margin-top: 0.25rem; color: #666;">
            Passwort ändern möglich
          </small>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
