<div class="admin-form">
  <h1>Benutzer bearbeiten</h1>

  <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@user.errors.count, "Fehler") %> verhinderten die Aktualisierung:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Name" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, "E-Mail" %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :role, "Rolle" %><br>
    <%= form.select :role, User.roles.keys %>
  </div>

  <hr style="margin: 2rem 0; border: none; border-top: 1px solid #E6E6E6;">

  <div>
    <%= form.label :password, "Neues Passwort" %><br>
    <%= form.password_field :password, autocomplete: "new-password" %>
    <small>Mindestens 12 Zeichen. Leer lassen, um das Passwort nicht zu ändern.</small>
  </div>

  <div>
    <%= form.label :password_confirmation, "Passwort bestätigen" %><br>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.submit "Speichern" %>
  </div>
  <% end %>

  <p>
    <%= link_to "Zurück", admin_users_path %>
  </p>
</div>
