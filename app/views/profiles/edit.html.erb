<h1>Profil bearbeiten</h1>

<%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>
  <% if @user.errors.any? %>
    <div class="flash alert">
      <h2><%= pluralize(@user.errors.count, "Fehler") %> verhinderten die Aktualisierung:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Neue E-Mail (Bestätigung erforderlich)" %>
    <%= form.email_field :email, value: nil, placeholder: @user.email %>
  </div>

  <hr style="margin: 2rem 0; border: none; border-top: 1px solid #E6E6E6;">

  <div class="form-group">
    <%= form.label :password, "Neues Passwort" %>
    <%= form.password_field :password, autocomplete: "new-password" %>
    <small>Mindestens 12 Zeichen. Leer lassen, um das Passwort nicht zu ändern.</small>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Passwort bestätigen" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <hr style="margin: 2rem 0; border: none; border-top: 1px solid #E6E6E6;">

  <div class="form-group">
    <%= form.label :current_password, "Aktuelles Passwort" %>
    <%= form.password_field :current_password, required: true, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.submit "Speichern" %>
  </div>
<% end %>
