<h1>Registrieren</h1>

<%= form_with model: @user, url: users_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@user.errors.count, "Fehler") %> verhinderten die Registrierung:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Name" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, "E-Mail" %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Passwort" %><br>
    <%= form.password_field :password %>
    <small>(mindestens 12 Zeichen)</small>
  </div>

  <div>
    <%= form.label :password_confirmation, "Passwort bestÃ¤tigen" %><br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "Registrieren" %>
  </div>
<% end %>
